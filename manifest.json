{
    "manifest_version": 3,
    "name": "Hono - Save and summarize everything",
    "description": "Use the latest AI models on any article, video or document: summarize, extract key points, translate, generate quizes, and more",
    "version": "1.11.0",
    "permissions": ["activeTab", "contextMenus", "declarativeContent", "storage", "scripting"],
    "action": {
        "default_title": "Save and ask AI",
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "src/background.js",
        "type": "module"
    },
    "icons": {
        "16": "icons/icon_48.png",
        "32": "icons/icon_48.png",
        "48": "icons/icon_48.png",
        "128": "icons/icon_128.png"
    }
}
