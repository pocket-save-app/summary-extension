{
    "manifest_version": 3,
    "name": "Summarize everything",
    "description": "Summarize the long article you're about to read",
    "version": "1.9.0",
    "permissions": ["activeTab", "declarativeContent", "storage", "scripting"],
    "action": {
        "default_title": "Summarize now!",
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "src/background.js",
        "type": "module"
    },
    "icons": {
        "16": "icons/icon_48.png",
        "32": "icons/icon_48.png",
        "48": "icons/icon_48.png",
        "128": "icons/icon_128.png"
    }
}
